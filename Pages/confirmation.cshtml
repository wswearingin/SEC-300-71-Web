@page
@model SSD_web.Pages.ConfirmationModel
@{
    ViewData["Title"] = "Confirmation";
}

<h1>Confirmation</h1>

@if (Model.IsConfirmed)
{
    <p>@Model.Message</p>
    <p><strong>First Name:</strong> @Model.FirstName</p>
    <p><strong>Email:</strong> @Model.Email</p>
}
else
{
    <p style="color:red;">@Model.Message</p>
}